<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" 
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" 
          crossorigin="anonymous">
    <title>Editor de Aparelho</title>
</head>
<body>
    <div class="container">
        <%- include('../partials/navbar') %>
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Editor de Aparelho</h3>
                <form action="/aparelho/salvar" method="POST">
                    <div class="form-group">
                        <label for="tipo">Tipo</label>
                        <select name="tipo" id="tipo" class="form-control">
                            <% tiposAparelhos.forEach(function(tipo) { %>
                                <option value="<%= tipo.id %>"><%= tipo.nome %></option>
                            <% }) %>
                        </select>
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="marca">Marca</label>
                        <select name="marca" id="marca" class="form-control">
                            <% marcas.forEach(function(marca) { %>
                                <option value="<%= marca.id %>"><%= marca.nome %></option>
                            <% }) %>
                        </select>
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="modelo">Descrição</label>
                        <input id="modelo" type="text" name="modelo"
                            placeholder="Insira o modelo do aparelho"
                            class="form-control" required>
                    </div>
                    <br>
                    <input class="btn btn-primary" type="submit" value="Salvar">
                    <a href="/marca/lista" class="btn btn-warning">Lista de Marcas</a>
                </form>
            </div>
        </div>
        <% if(mensagem) { %>
            <div class="alert alert-info">
                <strong>Novo Registro!</strong> <%= mensagem %>
            </div>
        <% } %>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.slim.js" 
            integrity="sha256-HwWONEZrpuoh951cQD1ov2HUK5zA5DwJ1DNUXaM6FsY=" 
            crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" 
            integrity="sha256-/ijcOLwFf26xEYAjW75FizKVo5tnTYiQddPZoLUHHZ8=" 
            crossorigin="anonymous">
    </script>
</body>
</html>